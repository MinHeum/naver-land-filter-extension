{
  "manifest_version": 3,
  "name": "Naver Land Filter",
  "version": "1.0.0",
  "description": "네이버 부동산 지도에서 추가 필터링 기능을 제공하는 Chrome 확장 프로그램",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://new.land.naver.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://new.land.naver.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Naver Land Filter"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
